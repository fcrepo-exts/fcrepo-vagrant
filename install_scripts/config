#!/bin/sh
#
# Contain Environment variables for installs
#

HOME_DIR="/home/vagrant"

SHARED_DIR="/vagrant"

DOWNLOAD_DIR="$SHARED_DIR/downloads"
if [ ! -d $DOWNLOAD_DIR ]; then
  mkdir $DOWNLOAD_DIR
fi

FEDORA_VERSION=4.6.1-SNAPSHOT
# FEDORA_TAG will usually be the exact same as FEDORA_VERSION, they are used to download the fcrepo-webapp-plus war file from
# https://github.com/fcrepo4-exts/fcrepo-webapp-plus/releases/download/fcrepo-webapp-plus-${FEDORA_TAG}/fcrepo-webapp-plus-${FEDORA_VERSION}.war
FEDORA_TAG=4.6.1-RC-2
# true to enable auth, false to disable it
FEDORA_AUTH=true
FEDORA_AUDIT=true
FEDORA_AUDIT_LOCATION=/audit


FUSEKI_VERSION=2.3.1
FUSEKI_BASE=/etc/fuseki
FUSEKI_DEPLOY=/var/lib/tomcat7/webapps

SOLR_VERSION=4.10.3
SOLR_HOME=/var/lib/tomcat7/solr

KARAF_VERSION=4.0.1
